<div style="background:#1D4088;width:100%;color:white;">
<img src="data:image/png;base64,"> Mini
<span style="position:absolute;right:0;padding:1;"><img src="data:image/jpeg;base64,"></span>
</div>

<img src="<%= user['picture']['data']['url'] %>">
<b><%= user['name'] %></b><br>
What's on your mind?<br>
<textarea id="message_input"></textarea>
<input type="button" onclick="ajaxSendRequest('post_feed')" style="background:#5b74a8;border-color:#8a9ac5 #29447E #1a356e;color:#fff">Share</input><br>

<% user['home']['data'].select{|e| e['message']}.each do |entry| %>
  <h4><%= entry['from']['name'] %>
     <%= " => #{entry['to']['data'].map(&:name).join(', ')}" if entry['to'] %>
     <%= " with #{entry['with_tags']['data'].map(&:name).join(', ')}" if entry['with_tags'] %></h4>
  <p><%= entry['message'] %></p>
<% end %>

<span style="color:grey;font-size:small">49 minutes ago · Like · Comment · Remove</span><hr>
<span style="color:grey">Visit us: Nani Lab.</span>

<div id="feed">
<% feed.each do |entry| %>
  <% if entry['message'] and entry['description'] %>
    <h3><%= entry['message'] %></h3>
    <p><%= entry['description'] %></p>
  <% else %>
    <p><%= entry['message'] || entry['description'] %></p>
  <% end %>
  <hr>
<% end %>
</div>

<script language="javascript" type="text/javascript">
  var xhr;
  function ajaxSendRequest(uri) {
    var msg_input = document.getElementById('message_input');
    xhr = new XMLHttpRequest();
    xhr.onreadystatechange = function() {
        if (xhr.readyState == 4) {
          if (xhr.status == 200) {
            var feed = document.getElementById('feed');
            var posted_entry = document.createElement("p");
            posted_entry.innerHTML = msg_input.innerHTML;
            feed.insertBefore(posted_entry, feed.firstChild);
            msg_input.innerHTML = "";
          }
        }
      };
    xhr.open("POST", uri, true);
    xhr.send("message=" + msg_input.innerHTML);
  }
</script>
